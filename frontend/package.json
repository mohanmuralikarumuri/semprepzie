{
  "name": "@semprepzie/frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend application for Semprepzie educational platform",
  "scripts": {
    "dev": "vite",
    "build": "cross-env NODE_OPTIONS='--max-old-space-size=1024' tsc && cross-env NODE_OPTIONS='--max-old-space-size=1024' vite build",
    "build:prod": "cross-env NODE_OPTIONS='--max-old-space-size=512' tsc -p tsconfig.prod.json && cross-env NODE_OPTIONS='--max-old-space-size=512' vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.7",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-cpp": "^6.0.3",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.2",
    "@lezer/highlight": "^0.16.0",
    "@monaco-editor/react": "^4.7.0",
    "@semprepzie/shared": "file:../shared",
    "@supabase/supabase-js": "^2.56.1",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "codemirror": "^6.0.2",
    "firebase": "^10.5.2",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.288.0",
    "pyodide": "^0.28.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.47.0",
    "react-hot-toast": "^2.4.1",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.18.0",
    "tailwind-merge": "^2.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react-swc": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "cross-env": "^10.0.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
